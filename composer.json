{
    "name": "gs/image",
    "description": "Image handling for PHP",
    "authors": [{"name": "Gordon Schmidt", "email": "schmidt.gordon@web.de"}],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/GordonSchmidt/GSImage",
    "keywords": ["php", "image"],
    "autoload": {
        "psr-0": {
            "GSImage": "src/",
            "GSImageTest": "tests/"
        }
