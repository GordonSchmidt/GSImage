        "phpunit/phpunit": "~3.7",
        "phpmd/phpmd": "~1.5",
        "squizlabs/php_codesniffer": "~1.5",
        "satooshi/php-coveralls": "~0.6"
    },
    "suggest": {
        "ext-gd": "to use the image driver GSImage\Driver\GdDriver"
    }
}
